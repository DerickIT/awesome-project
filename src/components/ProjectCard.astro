---
import type { Project } from '../data/projects';

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<article class={`project-card ${project.size} ${project.featured ? 'featured' : ''}`}>
  <div class="card-content">
    <!-- Title -->
    <h3 class="card-title">{project.title}</h3>
    
    <!-- Description -->
    <p class="card-description">{project.description}</p>
    
    <!-- Tags -->
    <div class="tags">
      {project.tags.map(tag => (
        <span class="tag">{tag}</span>
      ))}
    </div>
    
    <!-- Links -->
    <div class="card-links">
      {project.github && (
        <a 
          href={project.github} 
          target="_blank" 
          rel="noopener noreferrer"
          class="card-link"
          aria-label={`View ${project.title} on GitHub`}
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          GitHub
        </a>
      )}
      
      {project.link && (
        <a 
          href={project.link} 
          target="_blank" 
          rel="noopener noreferrer"
          class="card-link"
          aria-label={`View ${project.title} live demo`}
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
          Live Demo
        </a>
      )}
    </div>
  </div>
</article>

<style>
  .project-card {
    background: var(--color-cream-light);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
    transition: all var(--transition-base);
    border: 1px solid rgba(189, 195, 199, 0.3);
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(44, 62, 80, 0.1);
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
  }
  
  .project-card.featured {
    background: linear-gradient(135deg, rgba(13, 148, 136, 0.05) 0%, rgba(132, 169, 140, 0.05) 100%);
    border: 2px solid var(--color-teal-deep);
  }
  
  .card-content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    height: 100%;
  }
  
  .card-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-slate-dark);
    margin: 0;
  }
  
  .card-description {
    color: var(--color-charcoal-blue);
    line-height: 1.6;
    flex-grow: 1;
  }
  
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: auto;
  }
  
  .tag {
    background: var(--color-sand-warm);
    color: var(--color-slate-dark);
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    border: 1px solid var(--color-gray-soft);
  }
  
  .card-links {
    display: flex;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-sm);
  }
  
  .card-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-teal-deep);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
    transition: color var(--transition-fast);
  }
  
  .card-link:hover {
    color: var(--color-slate-dark);
  }
  
  /* Grid size classes */
  .project-card.1x1 {
    grid-column: span 1;
    grid-row: span 1;
  }
  
  .project-card.2x1 {
    grid-column: span 2;
    grid-row: span 1;
  }
  
  .project-card.1x2 {
    grid-column: span 1;
    grid-row: span 2;
  }
  
  .project-card.2x2 {
    grid-column: span 2;
    grid-row: span 2;
  }
  
  /* Mobile responsive */
  @media (max-width: 768px) {
    .project-card {
      grid-column: span 1 !important;
      grid-row: span 1 !important;
    }
    
    .card-title {
      font-size: 1.25rem;
    }
  }
</style>
