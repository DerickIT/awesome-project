---
import type { Project } from '../data/projects';

interface Props {
  project: Project;
}

const { project } = Astro.props;

// Neo-minimalist gradient for cards without images
const fallbackGradient = "bg-gradient-to-br from-slate-100 to-stone-200 dark:from-slate-800 dark:to-stone-800";
---

<article class={`project-card group ${project.size} ${project.featured ? 'featured' : ''} ${project.image ? 'has-image' : 'no-image'}`}>
  
  {/* Image Section - Only rendered if image exists */}
  {project.image && (
    <div class="card-media overflow-hidden">
      <img 
        src={project.image} 
        alt={project.title} 
        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
        loading="lazy"
      />
      <div class="absolute inset-0 bg-black/10 group-hover:bg-transparent transition-colors duration-500"></div>
    </div>
  )}

  {/* Content Section */}
  <div class={`card-content flex flex-col ${!project.image ? 'h-full justify-between' : ''}`}>
    
    <div>
      {/* Header: Title & Arrow */}
      <div class="flex justify-between items-start mb-3">
        <h3 class="card-title text-xl font-bold text-slate-900 leading-tight group-hover:text-teal-700 transition-colors">
          {project.title}
        </h3>
        
        {/* External Link Icon - Subtle */}
        {(project.link || project.github) && (
          <span class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 transform translate-y-2 group-hover:translate-y-0 text-teal-600">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" class="rotate-[-45deg]">
              <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </span>
        )}
      </div>
      
      {/* Description */}
      <p class={`text-slate-600 text-sm leading-relaxed ${!project.image ? 'line-clamp-4' : 'line-clamp-2'}`}>
        {project.description}
      </p>
    </div>

    {/* Footer: Tags & Actions */}
    <div class="mt-6 pt-4 border-t border-stone-200/60 flex items-center justify-between">
      <div class="flex flex-wrap gap-2">
        {project.tags.slice(0, 3).map(tag => (
          <span class="text-xs font-medium px-2 py-1 bg-stone-100 text-stone-600 rounded-md border border-stone-200">
            {tag}
          </span>
        ))}
      </div>
      
      {/* Simple Link Icons */}
      <div class="flex gap-3 text-slate-400">
        {project.github && (
          <a href={project.github} target="_blank" class="hover:text-slate-900 transition-colors" aria-label="GitHub">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
          </a>
        )}
      </div>
    </div>
  </div>
</article>

<style>
  .project-card {
    background: rgba(255, 255, 255, 0.8);
    border: 1px solid rgba(231, 229, 228, 0.6); /* Stone 200 */
    border-radius: var(--radius-md);
    overflow: hidden;
    position: relative;
    transition: all var(--transition-base);
    display: flex;
    flex-direction: column;
  }
  
  /* Hover Effect: Lift & Shadow */
  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px -15px rgba(15, 23, 42, 0.1), 
                0 0 0 1px rgba(13, 148, 136, 0.1);
    background: #fff;
    z-index: 10;
  }

  /* --- Image Mode Styles --- */
  .project-card.has-image .card-media {
    height: 180px; /* Default height */
    position: relative;
    border-bottom: 1px solid rgba(0,0,0,0.03);
  }
  
  .project-card.has-image .card-content {
    padding: 1.5rem;
    flex: 1;
  }

  /* --- No Image Mode Styles --- */
  .project-card.no-image {
    background: linear-gradient(145deg, #ffffff, #fafaf9);
  }
  
  .project-card.no-image .card-content {
    padding: 2rem;
  }
  
  /* Typography Hierarchy for No-Image */
  .project-card.no-image .card-title {
    font-size: 1.5rem; /* Larger title when no image */
    margin-bottom: 0.75rem;
  }

  /* --- Grid Size Variations --- */
  
  /* 2x1 (Wide) */
  .project-card.2x1.has-image {
    flex-direction: row; /* Side by Side */
  }
  .project-card.2x1.has-image .card-media {
    width: 50%;
    height: auto;
    border-bottom: none;
    border-right: 1px solid rgba(0,0,0,0.03);
  }
  .project-card.2x1.has-image .card-content {
    width: 50%;
  }

  /* 2x2 (Big) */
  .project-card.2x2 {
    display: flex;
    flex-direction: column;
  }
  .project-card.2x2.has-image .card-media {
    height: 60%; /* Take up more vertical space */
  }
  
  .project-card.1x2 {
    grid-column: span 1;
    grid-row: span 2;
  }
  .project-card.1x2.has-image .card-media {
    height: 50%;
  }

  /* --- Mobile Reset --- */
  @media (max-width: 768px) {
    .project-card {
      min-height: auto !important;
    }
    .project-card.2x1.has-image {
      flex-direction: column;
    }
    .project-card.2x1.has-image .card-media {
      width: 100%;
      height: 200px;
    }
    .project-card.2x1.has-image .card-content {
      width: 100%;
    }
  }
</style>

